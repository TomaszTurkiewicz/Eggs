<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherGamesActivity"
    android:id="@+id/other_games_layout"
    android:background="@color/gray">

    <LinearLayout
        android:id="@+id/send_game_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <TextView
            android:id="@+id/send_game_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SEND THIS GAME TO FRIEND"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/send_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/send_game_tv_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/battle_ships_game_linear_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/battle_ships_game_tv_blank_front"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/battle_ships_game_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/battle_ships_game_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BATTLE SHIPS GAME"
            android:textColor="@color/black"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/battle_ships_game_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/battle_ships_game_tv_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/back_to_game_linearLayout_other_games"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/back_toGame_tv_blank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/backToGameOtherGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/back_to_game_textView_other_games"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK TO GAME"
            android:textColor="@color/black"
            android:gravity="center"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>